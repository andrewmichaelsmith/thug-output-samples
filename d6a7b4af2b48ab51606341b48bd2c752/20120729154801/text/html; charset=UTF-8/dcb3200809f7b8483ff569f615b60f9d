<script type="text/javascript">
  var src = $("#post-sidebar iframe").attr("src");
  if(src != null){
    src = src.split("?");
    if(src.length > 1){
      src = src[0]+"?wmode=transparent&controls=0&"+src[1];
    }
    else{
      src = src[0]+"?wmode=transparent&controls=0";
    }
    $("#post-sidebar iframe").attr("src", src);
  }
</script>


